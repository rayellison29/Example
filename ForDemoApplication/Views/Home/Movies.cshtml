@{
    ViewData["Title"] = "Movies";
}
@model List<Movie>
<div class="text-center">
    <h1 class="display-4">My Movies</h1>
   <br />
    <a asp-action="CreateEditMovie" class="btn btn-primary">Create/Update</a>
    <br/>
    <hr />  
    <table class=" table">
        <thead>
            <tr>
                <th>Movie Id</th><th>Title</th><th>Genre</th><th>Lead Stars</th><th>Action</th>
            </tr>
        </thead>
        <tbody>
            @{
                foreach(var movie in Model)
                {
                    <tr>
                        <td>@movie.Id</td><td>@movie.Title</td><td>@movie.Genre</td><td>@movie.LeadStars</td>
                        <td>
                            <a asp-action="CreateEditMovie" asp-route-id="@movie.Id">Edit</a>
                            <a asp-action="DeleteMovie" asp-route-id="@movie.Id">Delete</a>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>

